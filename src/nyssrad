var cmd = require('./prompt');
var server = require('./server');
var data = require('./data');
var env = require('./env');
var config = require('./config');
var log = require('./log');
var daemon = require('./daemon');
var argv = require('optimist').argv;


var background = false;
var suppress_startup_msg = false;

// --start = start the server in the background as a daemon
if ((argv.start)) {
    background = true;
}

if ((argv.stop)) {
    daemon.stop();
    env.exit();
}

if ((argv.store)) {
    log.warn('Loading store from file ' + argv.store + ', default store is not loaded!');
    data.setFilename(argv.store);
}

if ((argv.port)) {
    config.server.port = argv.port;
}

if (config.store.flush.interval) {
    data.registerFlushing();
}

data.load();

if (background) {
    daemon.start();
} else {
    log.message("\nnyssrad " + env.VERSION + " - noSQL key-value-database");
    log.glitzer("Copyright (C) 2012, 2013 Alexander Kluth <contact@alexanderkluth.com>");
    log.message("Distributed under the terms of the MIT license\n");
    cmd.prompt();
}

